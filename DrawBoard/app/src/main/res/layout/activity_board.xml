<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="lzc.com.drawboard.Board">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:rowCount="15"
            android:columnCount="10"
            android:background="#f9f9f9"
            android:layout_margin="0dp"
            android:id="@+id/glyout">
        </GridLayout>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_draw"
        android:id="@+id/iv_b_draw"
        android:layout_gravity="bottom|center"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_up_menu"
        android:id="@+id/iv_b_up"
        android:layout_gravity="bottom|left"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:id="@+id/iv_grid"
        android:layout_gravity="bottom"
        android:src="@mipmap/grid"
        android:layout_marginBottom="-1000px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:id="@+id/iv_b_board"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-1000px"
        android:background="#99f1f1f1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_gravity="bottom"
        android:id="@+id/ll_b_toobar"
        android:background="#f6f6f6"
        android:gravity="right"
        android:layout_marginBottom="-130px">


        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:id="@+id/iv_b_save"
            android:src="@mipmap/ic_save_black_24dp"
            android:layout_gravity="right|bottom" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:id="@+id/iv_b_share1"
            android:src="@mipmap/ic_qq_share"
            android:layout_gravity="right|bottom" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:id="@+id/iv_b_share2"
            android:src="@mipmap/ic_weixin_share"
            android:layout_gravity="right|bottom" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:id="@+id/iv_b_share3"
            android:src="@mipmap/ic_pyq_share"
            android:layout_gravity="right|bottom" />
    </LinearLayout>



</FrameLayout>
